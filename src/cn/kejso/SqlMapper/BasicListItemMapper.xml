<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SqlMapper.BasicListItemMapper">

	<resultMap type="BasicListItem"  id="BasicListItemMap">
		<id property="id" column="id" />
		<result property="title" column="title" />
		<result property="brief" column="brief" />
		<result property="library" column="library" />
		<result property="titlenumber" column="titlenumber" />
		<result property="department" column="department" />
		<result property="level" column="level" />
		<result property="timeline" column="timeline" />
		<result property="promulgation" column="promulgation" />
		<result property="material" column="material" />
		<result property="contentclass" column="contentclass" />
	</resultMap>
	
	
	<insert id="insertBasicListItem" parameterType="BasicListItem" useGeneratedKeys="true" keyProperty="id">
    	 insert into ${tablename} (title,brief,library,titlenumber,department,level,timeline,promulgation,material,contentclass)
    	 		values('${entity.title}','${entity.brief}','${entity.library}','${entity.titlenumber}','${entity.department}','${entity.level}','${entity.timeline}','${entity.promulgation}','${entity.material}','${entity.contentclass}')
    </insert>
    
    <update id="updateBasicListItem" parameterType="BasicListItem" >  
        update wanfangdetail set title = #{title},   content = #{content} ,contenturl=#{contenturl}, library=#{library},titlenumber=#{titlenumber},
        										 department=#{department}, level=#{level},timeline=#{timeline},promulgation=#{promulgation},material=#{material},	  
        										 contentclass=#{contentclass}  where id = #{id}  
    </update>  
</mapper>